<div class="jumbotron">
	<h2>Update Account</h2>
	<hr>
	<% if @user.errors.any? %>
	<ul class="errors" style="color:red">
		<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>


	<%= form_tag user_path(@user.id), method: "patch" do %>

	<p>
		<%= label_tag :username %>
		<br>
		<%= text_field_tag :username , @user.username %>
	</p>

	<p>
		<%= label_tag :email %>
		<br>
		<%= text_field_tag :email, @user.email, size: 30%>
	</p>

		<p>
		<%= label_tag :image %>
		<br>
		<%= text_field_tag :image, @user.image, size: 30%>
	</p>

	<p>
		<%= label_tag :password %>
		<br>
		<%= password_field_tag :password %>
		<br>
		<%= label_tag :repassword %>
		<br>
		<%= password_field_tag :repassword %>
	</p>

	<%= button_tag "Update", class: "btn btn-success" %>
	<% end %>
</div>
